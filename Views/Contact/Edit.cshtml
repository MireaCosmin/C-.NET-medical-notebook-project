@model Proiect_CarnetMedical.Models.Contact
@{
    ViewBag.Title = "Modifica datele de contact";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Contact", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.ContactId)


    @Html.LabelFor(bt => bt.NrTelefon, "Numar de telefon:")
    <br />
    @Html.EditorFor(bt => bt.NrTelefon, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.NrTelefon, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.LabelFor(bt => bt.Email, "Adresa de email:")
    <br />
    @Html.EditorFor(bt => bt.Email, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.Email, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.LabelFor(bt => bt.Adresa, "Adresa de resedinta:")
    <br />
    @Html.EditorFor(bt => bt.Adresa, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.Adresa, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Modifica</button>
}