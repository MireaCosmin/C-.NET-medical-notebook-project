@model Proiect_CarnetMedical.Models.Nationalitate
@{
    ViewBag.Title = "Modifica nationalitatea";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Nationalitate", method: FormMethod.Post))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(b => b.NationalitateId)


    @Html.LabelFor(bt => bt.Denumire, "Nationalitate:")
    <br />
    @Html.EditorFor(bt => bt.Denumire, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(bt => bt.Denumire, "", new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Modifica</button>
}